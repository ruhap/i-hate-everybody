{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
